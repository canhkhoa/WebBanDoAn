@section Scripts {
	<script>
		$(document).ready(function () {
			$('.add-to-cart').click(function () {
				var Id = $(this).data("product_id");
				$.ajax({
					type: "POST",
					url: "@Url.Action("Add", "Cart")",
					data: { Id: Id },
					success: function (result) {
						if (result) {
							Swal.fire("Thêm sản phẩm vào giỏ hàng thành công");
						}
					}
				})
			})
		})
	</script>
